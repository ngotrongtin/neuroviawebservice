<style>
.pagination {
  display: flex;
  justify-content: center;
  margin-top: 1rem;
  padding-left: 0;
  list-style: none;
  flex-wrap: wrap;
}

.pagination li {
  margin: 0 3px;
}

.pagination li a,
.pagination li span {
  display: block;
  padding: 0.5rem 0.75rem;
  border-radius: 0.25rem;
  border: 1px solid #dee2e6;
  text-decoration: none;
  min-width: 38px;
  text-align: center;
  color: #0d6efd;
  transition: all 0.2s;
}

.pagination li a:hover {
  background-color: #0d6efd;
  color: white;
  border-color: #0d6efd;
}

.pagination li.active span {
  background-color: #0d6efd;
  color: white;
  border-color: #0d6efd;
  font-weight: bold;
}

.pagination li.disabled span {
  color: #6c757d;
  background-color: #f8f9fa;
  border-color: #dee2e6;
  cursor: not-allowed;
}
</style>
<div class="container mt-4">
  <h2>MQTT Messages (Auto-Update)</h2>

  <%= turbo_stream_from "mqtt_messages" %>

  <table class="table table-striped">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Topic</th>
        <th>Payload</th>
        <th>QoS</th>
        <th>Received At</th>
      </tr>
    </thead>
    <tbody id="messages">
      <%= render partial: "mqtt_messages/message", collection: @messages, as: :message %>
    </tbody>
  </table>

  <div class="d-flex justify-content-center mt-3">
    <%= paginate @messages %>
  </div>
</div>
