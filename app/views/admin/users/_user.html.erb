
<tr id="user_item_<%= user.id %>">
  <td><%= user.id %></td>
  <td><%= user.fullname %></td>
  <td><%= user.email %></td>
  <td><%= user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
  <td><%= user.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
  <td>
    <% if user.admin? %>
      <span class="badge bg-success">Admin</span>
    <% else %>
      <span class="badge bg-secondary">User</span>
    <% end %>
  </td>
  <td class="d-flex gap-1">
    <%= button_to "Toggle Admin", admin_user_path(user), method: :patch, class: "btn btn-sm btn-warning" %>
    <%= button_to "Delete",
                            admin_user_path(user),
                            method: :delete,
                            form: { data: { turbo_confirm: "Are you sure you want to delete this user?" } },
                            class: "btn btn-sm btn-danger" %>
  </td>
</tr>
