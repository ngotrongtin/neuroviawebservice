<div class="container">
  <h2>User List</h2>

  <table class="table table-striped table-bordered mt-3">
    <thead class="table-dark">
      <tr>
        <th>ID</th>
        <th>Email</th>
        <th>Created At</th>
        <th>Last Updated</th>
        <th>Role</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.email %></td>
          <td><%= user.created_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td><%= user.updated_at.strftime("%d/%m/%Y %H:%M") %></td>
          <td>
            <% if user.admin? %>
              <span class="badge bg-success">Admin</span>
            <% else %>
              <span class="badge bg-secondary">User</span>
            <% end %>
          </td>
          <td>
            <%= link_to "View", admin_user_path(user), class: "btn btn-sm btn-primary" %>
            <%= link_to "Edit", edit_admin_user_path(user), class: "btn btn-sm btn-warning" %>
            <%= link_to "Delete", admin_user_path(user),
                        method: :delete,
                        data: { confirm: "Are you sure you want to delete this user?" },
                        class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
