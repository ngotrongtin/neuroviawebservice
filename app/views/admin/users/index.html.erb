<div class="container">
  <h2>User Management</h2>
  <!-- ðŸ” Search Form -->
  <div class="d-flex justify-content-between mb-3">
    <%= form_with url: admin_users_path, method: :get, data: { turbo_frame: "users_frame" }, class: "d-flex gap-2" do |f| %>
      <%= f.text_field :fullname, value: params[:fullname], class: "form-control", placeholder: "Fullname..." %>
      <%= f.text_field :email, value: params[:email], class: "form-control", placeholder: "Email..." %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  </div>

  <turbo-frame id="users_frame">
    <table class="table table-striped table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>ID</th>
          <th>Full Name</th>
          <th>Email</th>
          <th>Created At</th>
          <th>Last Updated</th>
          <th>Role</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody id="users">
        <%= render partial: "user", collection: @users, as: :user %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center mt-3">
      <%= paginate @users, theme: 'bootstrap4' %>
    </div>
  </turbo-frame>

</div>
